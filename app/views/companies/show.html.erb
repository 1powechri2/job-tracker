<section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        <%=@company.name%>
      </h1>
      <h2 class="subtitle">
      </h2>
    </div>
  </div>
</section>
<% if @company.jobs.count > 0 %>
    Jobs for <strong><%= @company.name %></strong>
    <% @company.jobs.each do |job| %>
      <ul><%=link_to "#{job.title}", company_job_path(@company, job)%></ul>
    <% end %>
<% else %>
    <h3>0 Jobs Listed</h3>
<% end %>
</br>
</br>
<p>Add Contact</p>
<%= render partial: 'contacts/form' %>
</br>
<h3><strong> Existing Contacts</strong> </h3>
<%= render partial: 'companies/contact', collection: @company.contacts.reverse %>

<p><%= link_to "Create A Category", new_category_path%></p>
<p><%= link_to "Create A Job", new_company_job_path(@company)%></p>
<p><%= link_to "Delete Company: #{@company.name}", company_path(@company), method: :delete, data:{confirm: "Really delete the category?"} %></p></br></br>
