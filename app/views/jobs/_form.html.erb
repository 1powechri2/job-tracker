<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :rating %>
  <%= f.number_field :level_of_interest, in: 1..5 %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :category %>
  <%= f.collection_select(:category_id, Category.all, :id, :title, { prompt: "Select Category" }) %>

  <%= f.submit %>
<% end %>
