<h1><%= @jobs.first.city %> Jobs</h1>

<% @jobs.each do |job| %>
  <ul>
    <li><%= job.title %></li>
    <li><%= job.company.name %></li>
    <li><%= job.city %></li>
    <li><%= job.level_of_interest %></li>
    <p><%= link_to "Edit", edit_job_path(job)%></p>
    <p><%= link_to "Delete", job_path(job), method: :delete, data: {confirm: "Really delete the job?"} %></p>
  </ul>
<% end %>
